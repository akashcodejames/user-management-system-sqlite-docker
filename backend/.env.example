# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Environment
FLASK_ENV=production

# Database Configuration
# For Render: Use the Internal Database URL from Render PostgreSQL dashboard
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://username:password@host:5432/dbname

# Security - Generate secure keys using: python generate_secret_key.py
# IMPORTANT: Use different keys for production!
SECRET_KEY=your-super-secret-key-change-this-in-production-use-generate-script
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-use-generate-script

# JWT Configuration
JWT_EXPIRATION_HOURS=24

# CORS Configuration
# Add your frontend URL(s), separated by commas
# Example: https://your-frontend.vercel.app,https://www.yourdomain.com
CORS_ORIGINS=https://your-frontend-app.vercel.app

# Port (Render will set this automatically, but default is 10000)
PORT=10000

# Python Environment (optional, for Render)
PYTHON_VERSION=3.11.0
